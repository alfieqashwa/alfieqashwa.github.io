---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import "../styles/global.css";
const { pageTitle } = Astro.props;
---

<html lang="en" class="bg-background text-foreground">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <meta name="HandheldFriendly" content="True" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    <meta name="format-detection" content="telephone=no,date=no,address=no,email=no,url=no" />
    <meta name="theme-color" content="#e9d3b6" />
    <title>{pageTitle} | AQ</title>
  </head>
  <body>
    <div class="flex h-fit min-h-screen flex-col gap-y-6 font-mono pb-16 sm:pb-0">
      <!-- Header -->
      <div class="bg-background/50 sticky top-0 z-40 divide-y backdrop-blur-sm">
        <Header />
      </div>
      
      <!-- Main Content -->
      <main class="grow">
        <div class="mx-auto flex grow flex-col gap-y-6 px-2">
          <slot />
        </div>
      </main>
      
      <!-- Footer -->
      <Footer />
      
      <!-- Mobile Bottom Navigation -->
      <nav class="fixed bottom-0 left-0 right-0 z-50 bg-background/95 backdrop-blur-sm border-t border-border sm:hidden">
        <div class="flex items-center justify-around px-4 py-2">
          <a href="/" class="flex flex-col items-center gap-1 p-2 text-xs text-muted-foreground hover:text-foreground transition-colors" data-page="home">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
              <polyline points="9,22 9,12 15,12 15,22"/>
            </svg>
            <span>Home</span>
          </a>
          
          <a href="/projects" class="flex flex-col items-center gap-1 p-2 text-xs text-muted-foreground hover:text-foreground transition-colors" data-page="projects">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
              <polyline points="14,2 14,8 20,8"/>
              <line x1="16" y1="13" x2="8" y2="13"/>
              <line x1="16" y1="17" x2="8" y2="17"/>
              <polyline points="10,9 9,9 8,9"/>
            </svg>
            <span>Projects</span>
          </a>
          
          <a href="/blog" class="flex flex-col items-center gap-1 p-2 text-xs text-muted-foreground hover:text-foreground transition-colors" data-page="blog">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
              <polyline points="14,2 14,8 20,8"/>
              <line x1="16" y1="13" x2="8" y2="13"/>
              <line x1="16" y1="17" x2="8" y2="17"/>
              <polyline points="10,9 9,9 8,9"/>
            </svg>
            <span>Blog</span>
          </a>
          
          <a href="/about/" class="flex flex-col items-center gap-1 p-2 text-xs text-muted-foreground hover:text-foreground transition-colors" data-page="about">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="3"/>
              <path d="M12 1v6m0 12v6m11-7h-6m-12 0H1m12.657-7.657L18.364 5.636m0 12.728l-2.828-2.828M5.636 5.636l2.828 2.828m0 9.9L5.636 18.364"/>
            </svg>
            <span>About</span>
          </a>
          
          <a href="/tags/" class="flex flex-col items-center gap-1 p-2 text-xs text-muted-foreground hover:text-foreground transition-colors" data-page="tags">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"/>
              <line x1="7" y1="7" x2="7.01" y2="7"/>
            </svg>
            <span>Tags</span>
          </a>
        </div>
      </nav>
    </div>
    
    <script>
      // Highlight current page in mobile navigation
      document.addEventListener('DOMContentLoaded', () => {
        const currentPath = window.location.pathname;
        const navLinks = document.querySelectorAll('[data-page]');
        
        navLinks.forEach(link => {
          const href = link.getAttribute('href');
          if (currentPath === href || 
              (href === '/projects' && currentPath.startsWith('/projects')) ||
              (href === '/blog' && currentPath.startsWith('/blog')) ||
              (href === '/about/' && currentPath.startsWith('/about')) ||
              (href === '/tags/' && currentPath.startsWith('/tags')) ||
              (href === '/' && currentPath === '/')) {
            link.classList.remove('text-muted-foreground');
            link.classList.add('text-primary');
          }
        });
      });
    </script>
  </body>
</html>
