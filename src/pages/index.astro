---
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "Home";
---

<BaseLayout pageTitle={pageTitle}>
  <section class="mx-auto grid min-w-xs max-w-sm grid-cols-1 gap-2 [grid-template-areas:'a''b''e''h''i''c''k''d''g''f''j'] sm:max-w-2xl sm:grid-cols-2 sm:[grid-template-areas:'a_a''b_d''e_e''j_g''h_i''h_c''k_c''f_f'] lg:max-w-5xl lg:grid-cols-3 lg:[grid-template-areas:'a_a_b''d_e_e''h_f_f''h_i_g''k_c_j'] xl:max-w-7xl xl:grid-cols-4 xl:[grid-template-areas:'a_a_b_c''d_e_e_c''h_f_f_g''h_i_j_k']">
    
    <!-- About Card -->
    <div class="aspect-[3/4] p-2 [grid-area:a] sm:aspect-[2/1] xl:aspect-[2/1]">
      <div class="bg-muted size-full border">
        <div class="flex size-full bg-[url('/noise.webp')] bg-cover bg-center bg-no-repeat">
          <div class="size-full bg-gradient-to-br from-primary/20 to-primary/5">
            <div class="flex p-4">
              <div class="hidden w-1/3 sm:block"></div>
              <div class="space-y-4 sm:w-2/3">
                <p class="text-foreground/80 bg-background block border p-3 text-sm text-pretty">
                  Hey, I'm Alfie! I'm a software engineer and tech enthusiast from Indonesia.
                </p>
                <p class="text-foreground/80 bg-background block border p-3 text-sm text-pretty">
                  I enjoy building web applications, exploring new technologies, and sharing my learning journey through this digital garden.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Projects Card -->
    <div class="aspect-square p-2 [grid-area:b]">
      <div class="bg-muted size-full border relative">
        <div class="size-full bg-gradient-to-br from-primary/10 to-primary/5">
          <div class="p-6 h-full flex flex-col justify-center items-center text-center">
            <h3 class="text-lg font-semibold mb-2">Projects</h3>
            <p class="text-muted-foreground text-sm mb-4">Explore my recent work and side projects</p>
            <a href="/projects" class="inline-flex items-center text-sm border border-border bg-background hover:bg-accent px-3 py-2 rounded transition-colors">
              View Projects
              <svg width="16" height="16" class="ml-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M13 5h6v6m0-6L5 19"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Tech Stack Card -->
    <div class="aspect-square p-2 [grid-area:c] sm:aspect-[1/2] lg:aspect-square xl:aspect-[1/2]">
      <div class="bg-muted size-full border">
        <div class="p-4 h-full">
          <h3 class="text-lg font-semibold mb-4">Tech Stack</h3>
          <div class="space-y-2 text-sm">
            <div class="flex items-center gap-2">
              <div class="w-2 h-2 bg-primary rounded-full"></div>
              <span>JavaScript/TypeScript</span>
            </div>
            <div class="flex items-center gap-2">
              <div class="w-2 h-2 bg-primary rounded-full"></div>
              <span>React/Next.js</span>
            </div>
            <div class="flex items-center gap-2">
              <div class="w-2 h-2 bg-primary rounded-full"></div>
              <span>Astro</span>
            </div>
            <div class="flex items-center gap-2">
              <div class="w-2 h-2 bg-primary rounded-full"></div>
              <span>Tailwind CSS</span>
            </div>
            <div class="flex items-center gap-2">
              <div class="w-2 h-2 bg-primary rounded-full"></div>
              <span>Node.js</span>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Contact Card -->
    <div class="aspect-auto p-2 [grid-area:d] sm:aspect-square">
      <div class="bg-muted size-full border relative">
        <div class="p-6 h-full flex flex-col justify-center items-center text-center">
          <h3 class="text-lg font-semibold mb-2">Let's Connect</h3>
          <p class="text-muted-foreground text-sm mb-4">Feel free to reach out!</p>
          <div class="flex gap-2">
            <a href="https://github.com/alfieqashwa" target="_blank" class="p-2 border rounded hover:bg-accent transition-colors">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Latest Post Card -->
    <div class="aspect-[6/5] p-2 [grid-area:e] sm:aspect-[2/1]">
      <div class="bg-muted size-full border relative">
        <div class="p-4 h-full">
          <h3 class="text-lg font-semibold mb-2">Latest Post</h3>
          <p class="text-muted-foreground text-sm mb-4">Check out my most recent blog post</p>
          <a href="/blog" class="text-sm text-primary hover:underline">Read latest post â†’</a>
        </div>
      </div>
    </div>
    
    <!-- About Me Extended -->
    <div class="aspect-square p-2 [grid-area:f] sm:aspect-[2/1]">
      <div class="bg-muted size-full border">
        <div class="p-4 h-full">
          <h3 class="text-lg font-semibold mb-4">About This Site</h3>
          <p class="text-muted-foreground text-sm">
            This is my digital garden where I share thoughts, tutorials, and experiments. 
            Built with Astro and deployed with GitHub Actions.
          </p>
        </div>
      </div>
    </div>
    
    <!-- Status Card -->
    <div class="aspect-square p-2 [grid-area:g]">
      <div class="bg-muted size-full border">
        <div class="p-4 h-full flex flex-col justify-center items-center text-center">
          <div class="w-3 h-3 bg-blue-500 rounded-full mb-2"></div>
          <p class="text-sm font-medium">Building & Learning</p>
          <p class="text-muted-foreground text-xs mt-1">Always exploring</p>
        </div>
      </div>
    </div>
    
    <!-- Image Card 1 -->
    <div class="aspect-square p-2 [grid-area:h] sm:aspect-[1/2]">
      <div class="bg-muted size-full border">
        <div class="size-full bg-gradient-to-br from-primary/20 to-primary/5 flex items-center justify-center">
          <span class="text-muted-foreground text-sm">Image Placeholder</span>
        </div>
      </div>
    </div>
    
    <!-- Current Project -->
    <div class="aspect-square p-2 [grid-area:i]">
      <div class="bg-muted size-full border">
        <div class="p-4 h-full">
          <h3 class="text-lg font-semibold mb-2">Featured Project</h3>
          <p class="text-muted-foreground text-sm mb-2">Currently showcasing:</p>
          <p class="text-sm font-medium mb-1">QozyCue</p>
          <p class="text-xs text-muted-foreground">Billiard management system</p>
        </div>
      </div>
    </div>
    
    <!-- Quick Links -->
    <div class="aspect-square p-2 [grid-area:j]">
      <div class="bg-muted size-full border">
        <div class="p-4 h-full">
          <h3 class="text-lg font-semibold mb-4">Quick Links</h3>
          <div class="space-y-2 text-sm">
            <a href="/about" class="block text-muted-foreground hover:text-foreground transition-colors">About</a>
            <a href="/projects" class="block text-muted-foreground hover:text-foreground transition-colors">Projects</a>
            <a href="/blog" class="block text-muted-foreground hover:text-foreground transition-colors">Blog</a>
            <a href="/tags" class="block text-muted-foreground hover:text-foreground transition-colors">Tags</a>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Fun Fact -->
    <div class="aspect-square p-2 [grid-area:k]">
      <div class="bg-muted size-full border">
        <div class="p-4 h-full flex flex-col justify-center text-center">
          <p class="text-sm text-muted-foreground mb-2">Fun fact:</p>
          <p class="text-sm">I love exploring new technologies and sharing what I learn!</p>
        </div>
      </div>
    </div>
    
  </section>
</BaseLayout>
