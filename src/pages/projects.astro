---
import PageHead from "@/components/PageHead.astro";
import Layout from "@/layouts/Layout.astro";

const projects = [
  {
    title: "QozyCue - Billiard Management System",
    description: "A comprehensive billiard hall management system built with modern web technologies. Features real-time table tracking, customer management, and billing system.",
    technologies: ["Next.js", "TypeScript", "Prisma", "PostgreSQL", "Tailwind CSS", "Convex"],
    liveUrl: "https://www.qozycue.com/",
    githubUrl: "https://github.com/alfieqashwa/billiard-app",
    status: "Live",
    featured: true,
    image: "/projects/qozycue-preview.png", // You can add screenshots later
    highlights: [
      "Real-time pool table status tracking",
      "Reports management system", 
      "Automated billing and invoicing",
      "Admin & Owner dashboard with analytics",
      "Documentation and support",
      "AI assitant (soon)"
    ]
  },
  {
    title: "Queue Management Application",
    description: "A modern queue management system with real-time status updates and flow control. Built with Docker for easy deployment and scalability.",
    technologies: ["Docker", "Node.js", "Queue Management", "Real-time Updates"],
    githubUrl: "https://github.com/alfieqashwa/queue-app",
    status: "Live (offline)",
    featured: false,
    highlights: [
      "Real-time queue status tracking",
      "Automated flow management",
      "Docker containerized deployment", 
      "Status monitoring dashboard"
    ]
  },
  {
    title: "Jakarta Stories",
    description: "A storytelling platform showcasing narratives and experiences from Jakarta. A place to share and discover authentic stories from Indonesia's capital city.",
    technologies: ["Next.js", "TypeScript", "Content Management", "Responsive Design"],
    liveUrl: "https://www.jakartastories.com/",
    githubUrl: "https://github.com/alfieqashwa/jakarta-stories",
    status: "Live",
    featured: false,
    highlights: [
      "Story content management",
      "Responsive design",
      "SEO optimized",
      "Clean reading experience"
    ]
  }
];
---

<Layout>

  <PageHead slot="head" title="Projects" />
  <div class="mx-auto max-w-6xl px-4">
    <!-- Header -->
    <div class="mb-8 sm:mb-12">
      <h1 class="text-3xl sm:text-4xl font-bold mb-4">Projects</h1>
      <p class="text-lg sm:text-xl text-muted-foreground leading-relaxed">
        A showcase of my recent work and side projects. From billiard management systems 
        to storytelling platforms, each project represents a journey of learning and problem-solving.
      </p>
    </div>

    <!-- Featured Project -->
    {projects.filter(project => project.featured).map((project) => (
      <div class="mb-12 sm:mb-16">
        <div class="bg-muted border rounded-lg overflow-hidden">
          <div class="grid lg:grid-cols-2 gap-6 lg:gap-8">
            <!-- Project Image/Preview -->
            <div class="bg-gradient-to-br from-primary/20 to-primary/5 p-6 sm:p-8 flex items-center justify-center min-h-[200px] sm:min-h-[300px]">
            {project.image ? (
            <img src={project.image} alt={project.title} class="w-full h-full object-cover" />
            ) 
             : (

               <div class="text-center">
                <h3 class="text-base sm:text-lg font-semibold mb-2">Featured Project</h3>
                <p class="text-muted-foreground text-sm">Screenshot coming soon</p>
              </div>
            )}
            </div>
            
            <!-- Project Details -->
            <div class="p-6 sm:p-8">
              <div class="flex items-center gap-2 mb-4">
                <span class="inline-flex items-center px-2 py-1 text-xs bg-green-100 text-green-800 rounded-full">
                  {project.status}
                </span>
                <span class="text-xs text-muted-foreground">Featured</span>
              </div>
              
              <h2 class="text-xl sm:text-2xl font-bold mb-4">{project.title}</h2>
              <p class="text-muted-foreground mb-4 sm:mb-6 leading-relaxed text-sm sm:text-base">{project.description}</p>
              
              <!-- Highlights -->
              <div class="mb-4 sm:mb-6">
                <h4 class="font-semibold mb-3 text-sm sm:text-base">Key Features:</h4>
                <ul class="grid grid-cols-1 gap-2">
                  {project.highlights.map((highlight) => (
                    <li class="flex items-center text-xs sm:text-sm text-muted-foreground">
                      <div class="w-1.5 h-1.5 bg-primary rounded-full mr-2 shrink-0"></div>
                      {highlight}
                    </li>
                  ))}
                </ul>
              </div>
              
              <!-- Technologies -->
              <div class="mb-4 sm:mb-6">
                <h4 class="font-semibold mb-3 text-sm sm:text-base">Technologies:</h4>
                <div class="flex flex-wrap gap-1.5 sm:gap-2">
                  {project.technologies.map((tech) => (
                    <span class="px-2 sm:px-3 py-1 text-xs bg-primary/10 text-primary rounded-full">
                      {tech}
                    </span>
                  ))}
                </div>
              </div>
              
              <!-- Links -->
              <div class="flex flex-col sm:flex-row gap-2 sm:gap-3">
                {project.liveUrl && (
                  <a 
                    href={project.liveUrl} 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-2 px-4 py-2 bg-primary text-primary-foreground rounded-lg hover:bg-primary/90 transition-colors"
                  >
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
                      <polyline points="15,3 21,3 21,9"/>
                      <line x1="10" y1="14" x2="21" y2="3"/>
                    </svg>
                    Live Demo
                  </a>
                )}
                <a 
                  href={project.githubUrl} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 px-4 py-2 border border-border bg-background hover:bg-accent rounded-lg transition-colors"
                >
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                  View Code
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    ))}

    <!-- Other Projects Grid -->
    <div>
      <h2 class="text-xl sm:text-2xl font-semibold mb-6 sm:mb-8">Other Projects</h2>
      <div class="grid gap-6 sm:gap-8 md:grid-cols-2">
        {projects.filter(project => !project.featured).map((project) => (
          <div class="bg-muted border rounded-lg p-4 sm:p-6 hover:bg-accent/50 transition-colors group">
            <!-- Status Badge -->
            <div class="flex items-center justify-between mb-4">
              <span class={`inline-flex items-center px-2 py-1 text-xs rounded-full ${
                project.status === 'Live' 
                  ? 'bg-green-100 text-green-800' 
                  : 'bg-blue-100 text-blue-800'
              }`}>
                {project.status}
              </span>
            </div>
            
            <!-- Project Title & Description -->
            <h3 class="text-lg sm:text-xl font-semibold mb-3 group-hover:text-primary transition-colors">
              {project.title}
            </h3>
            <p class="text-muted-foreground mb-4 text-xs sm:text-sm leading-relaxed">
              {project.description}
            </p>
            
            <!-- Highlights -->
            <div class="mb-4">
              <h4 class="font-medium mb-2 text-sm">Key Features:</h4>
              <ul class="space-y-1">
                {project.highlights.slice(0, 3).map((highlight) => (
                  <li class="flex items-center text-xs text-muted-foreground">
                    <div class="w-1 h-1 bg-primary rounded-full mr-2"></div>
                    {highlight}
                  </li>
                ))}
              </ul>
            </div>
            
            <!-- Technologies -->
            <div class="mb-6">
              <div class="flex flex-wrap gap-1">
                {project.technologies.slice(0, 3).map((tech) => (
                  <span class="px-2 py-1 text-xs bg-primary/10 text-primary rounded">
                    {tech}
                  </span>
                ))}
                {project.technologies.length > 3 && (
                  <span class="text-xs text-muted-foreground px-2 py-1">
                    +{project.technologies.length - 3} more
                  </span>
                )}
              </div>
            </div>
            
            <!-- Links -->
            <div class="flex gap-2">
              {project.liveUrl && (
                <a 
                  href={project.liveUrl} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-1 px-3 py-1.5 text-sm bg-primary text-primary-foreground rounded hover:bg-primary/90 transition-colors"
                >
                  <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
                    <polyline points="15,3 21,3 21,9"/>
                    <line x1="10" y1="14" x2="21" y2="3"/>
                  </svg>
                  Live
                </a>
              )}
              <a 
                href={project.githubUrl} 
                target="_blank" 
                rel="noopener noreferrer"
                class="inline-flex items-center gap-1 px-3 py-1.5 text-sm border border-border bg-background hover:bg-accent rounded transition-colors"
              >
                <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
                Code
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Call to Action -->
    <div class="mt-12 sm:mt-16 bg-muted border rounded-lg p-6 sm:p-8 text-center">
      <h2 class="text-lg sm:text-xl font-semibold mb-3 sm:mb-4">Interested in collaborating?</h2>
      <p class="text-sm sm:text-base text-muted-foreground mb-4 sm:mb-6">
        I'm always open to discussing new projects, creative ideas, or opportunities to be part of your visions.
      </p>
      <a 
        href="https://github.com/alfieqashwa" 
        target="_blank" 
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 px-4 sm:px-6 py-2 sm:py-3 bg-primary text-primary-foreground rounded-lg hover:bg-primary/90 transition-colors"
      >
        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        Get in Touch
      </a>
    </div>
  </div>
</Layout>
